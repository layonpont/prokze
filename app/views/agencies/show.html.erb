<div class="row">
  <div class="col-md-4 center">

      <div class="sidebar-item">
          <div class="sidebar">
              <%= image_tag 'logo.png', :class => 'style_logo center'%><br>
          </div>
      </div>
    <div class="reservation-form">
      <!-- Reservation form -->
    </div>
  </div>
  <div class="col-md-8 center">
    <div class="panel panel-default">
      <div class="panel-body" style="font-size: 16px; font-family: 'BrownPro', Tahoma, Arial, sans-serif; ">
             <center> <div class="agency-name"> <%= @agency.name %></div><br><br>
               <i class="fa fa-map-marker" aria-hidden="true"></i>&nbsp;<%= @agency.city %>,&nbsp;<%= @agency.state %>&nbsp;<%= @agency.zipcode%>
             </center>
        <div > <h4 style="font-weight: 600;margin-top: 45px">About Us</h4><%= @agency.description %>  </div>
        <div style="display: inline;"> <h4 style="font-weight: 600;margin-top: 20px">Contact Us</h4>
          </div>
               <i class="fa fa-envelope-o" aria-hidden="true"></i>&nbsp;&nbsp;<%= @agency.email%> <br>
               <div><i class="fa fa-phone" aria-hidden="true"></i>&nbsp;&nbsp; <a href="tel:<%= @agency.phone%>" style="color:#565a5c;"><%= @agency.phone%></a></div>
               <i class="fa fa-fax" aria-hidden="true"></i>&nbsp;&nbsp;<a href="tel:<%= @agency.fax%>" style="color:#565a5c;"><%= @agency.fax%></a><br>
               <i class="fa fa-desktop" aria-hidden="true"></i>&nbsp;&nbsp;<a href="http://<%= @agency.website%>" style="color:#565a5c;">Visit Our Website</a>

                        <br>
                        <td>
                        <div class="row">
                      <div class="col-md-12 responsive">
                        <div id="map"></div>

                        <style>
                        #map {
                          margin-top: 30px;
                          width: 100%;
                          height: 275px;
                        }
                      </style>

                        <script src="https://maps.googleapis.com/maps/api/js"></script>
                        <script>
                          function initialize() {
                            var mapCanvas = document.getElementById('map');
                            var mapOptions = {
                              center: new google.maps.LatLng(<%= @agency.latitude %>, <%= @agency.longitude %>),
                              zoom: 14,
                              mapTypeId: google.maps.MapTypeId.ROADMAP
                            }
                            var map = new google.maps.Map(mapCanvas, mapOptions);

                            var marker = new google.maps.Marker({
                              position: new google.maps.LatLng(<%= @agency.latitude %>, <%= @agency.longitude %>),
                              title: "<%= @agency.address%>"
                            });

                            marker.setMap(map);
                          }
                          google.maps.event.addDomListener(window, 'load', initialize);
                        </script>
                      </div>
                </div>
      </div>
    </div>
  </div>
  </div>


























