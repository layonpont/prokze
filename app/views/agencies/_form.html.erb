
<div class="container">
  <div class=" text-center">
<%= form_for(@agency) do |f| %>

        <h1>Tell us about your agency.</h1>
        <div class="col-md-offset-3 text-center">
        <div class="row">
        <div class="form-group  " >
          <%= f.text_field :name, placeholder: "Name of Agency", class: "form-control" %></div>
      </div>

      <div class="row">
        <div class="form-group  " >
          <%= f.text_field :city, placeholder: "City", class: "form-control" %></div>
      </div>

      <div class="row">
              <div class="form-group select" >
                <%= f.select :state, options_for_select([
                                                              ['Alabama', 'AL'],
                                                              ['Alaska', 'AK'],
                                                              ['Arizona', 'AZ'],
                                                              ['Arkansas', 'AR'],
                                                              ['California', 'CA'],
                                                              ['Colorado', 'CO'],
                                                              ['Connecticut', 'CT'],
                                                              ['Delaware', 'DE'],
                                                              ['District of Columbia', 'DC'],
                                                              ['Florida', 'FL'],
                                                              ['Georgia', 'GA'],
                                                              ['Hawaii', 'HI'],
                                                              ['Idaho', 'ID'],
                                                              ['Illinois', 'IL'],
                                                              ['Indiana', 'IN'],
                                                              ['Iowa', 'IA'],
                                                              ['Kansas', 'KS'],
                                                              ['Kentucky', 'KY'],
                                                              ['Louisiana', 'LA'],
                                                              ['Maine', 'ME'],
                                                              ['Maryland', 'MD'],
                                                              ['Massachusetts', 'MA'],
                                                              ['Michigan', 'MI'],
                                                              ['Minnesota', 'MN'],
                                                              ['Mississippi', 'MS'],
                                                              ['Missouri', 'MO'],
                                                              ['Montana', 'MT'],
                                                              ['Nebraska', 'NE'],
                                                              ['Nevada', 'NV'],
                                                              ['New Hampshire', 'NH'],
                                                              ['New Jersey', 'NJ'],
                                                              ['New Mexico', 'NM'],
                                                              ['New York', 'NY'],
                                                              ['North Carolina', 'NC'],
                                                              ['North Dakota', 'ND'],
                                                              ['Ohio', 'OH'],
                                                              ['Oklahoma', 'OK'],
                                                              ['Oregon', 'OR'],
                                                              ['Pennsylvania', 'PA'],
                                                              ['Puerto Rico', 'PR'],
                                                              ['Rhode Island', 'RI'],
                                                              ['South Carolina', 'SC'],
                                                              ['South Dakota', 'SD'],
                                                              ['Tennessee', 'TN'],
                                                              ['Texas', 'TX'],
                                                              ['Utah', 'UT'],
                                                              ['Vermont', 'VT'],
                                                              ['Virginia', 'VA'],
                                                              ['Washington', 'WA'],
                                                              ['West Virginia', 'WV'],
                                                              ['Wisconsin', 'WI']], :selected => @agency.state),{}, {class: "form-control"}%>
              </div>
            </div>


          <div class="row">
            <div class="form-group text-center"  >
              <%= f.text_field :address, placeholder: "Address", class: "form-control" %></div>
          </div>


          <div class="row">
        <div class="form-group text-center"  >
          <%= f.text_field :zipcode, placeholder: "Zipcode", class: "form-control" %></div>
      </div>


          <div class="row">
            <div class="form-group  " >
              <%= f.text_field :email, placeholder: "Email", class: "form-control" %></div>
          </div>



          <div class="row">
        <div class="form-group  " >
          <%= f.text_field :phone, placeholder: "Phone", class: "form-control" %></div>
      </div>

          <div class="row">
            <div class="form-group  " >
              <%= f.text_field :fax, placeholder: "Fax", class: "form-control" %></div>
          </div>


          <div class="row">
        <div class="form-group " >
          <%= f.text_field :website, placeholder: "Website", class: "form-control" %></div>
      </div>

      <div class="row">
        <div class="form-group  " >
          <%= f.text_area :description, placeholder: "Description", class: "form-control" %></div>
      </div>

       <div class="actions">
         <%= f.submit %>
       </div>
      <% end %>
    </div>
  </div>
</div>
