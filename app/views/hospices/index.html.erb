<p id="notice"><%= notice %></p>

<h1>Listing Hospices</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Username</th>
      <th>Passcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hospices.each do |hospice| %>
      <tr>
        <td><%= hospice.name %></td>
        <td><%= hospice.username %></td>
        <td><%= hospice.passcode %></td>
        <td><%= link_to 'Show', hospice %></td>
        <td><%= link_to 'Edit', edit_hospice_path(hospice) %></td>
        <td><%= link_to 'Destroy', hospice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

