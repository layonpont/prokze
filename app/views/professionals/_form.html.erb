<div class="container">
  <div class=" text-center">

<%= form_for(@professional) do |f| %>
    <div class="col-md-offset-3 text-center">
      <div class="row">

        <div class="form-group  " >
          <%= f.text_field :name, placeholder: "Name", class: "form-control" %></div>
      </div>

      <div class="row">
        <div class="form-group  " >
          <%= f.text_field :phone, placeholder: "Phone", class: "form-control" %></div>
      </div>

      <div class="row">
        <div class="form-group  " >
          <%= f.text_field :email, placeholder: "Email", class: "form-control" %></div>
      </div>


      <div class="row">
      <div class=" form-group" >
<%= f.select(:title, options_for_select([['LPN', 'LPN'],  ['RN', 'RN'],  ['CNA', 'CNA']]), {prompt:"Professional's Title"}, {class: "form-control"}) %>
      </div>
      </div>

      <div class="actions"  style="text-align: center">
        <%= f.submit %>
      </div>

<% end %>
</div>
</div>
  </div>
</div>